<div class="row">
  <div class="large-12 columns">
    <h1>Recipe By Ingredient</h1>

    <p><%= @recipe.title %></p>
    <p><%= @recipe.prep_time %></p>
    <p><%= @recipe.instructions %></p>

    <% @recipe.recipeingredients.each do |recipeingredient| %>
      <p><%= recipeingredient.quantity %> <%= recipeingredient.ingredient.name %></p>
    <% end %>

    <%= link_to "Edit", edit_recipe_path(@recipe) %>
    <p><%= link_to "Delete", recipe_path(@recipe), method: :delete, data: {id: @recipe.id } %></p>
  </div>
</div>
