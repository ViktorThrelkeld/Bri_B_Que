<h1>Your Profile</h1>
<p><%= current_user.username %></p>
<p><%= @profile.bio %></p>

<%= button_to "Update Profile", edit_profile_path(@profile), :method => :get %>
<%= link_to "New Recipe", new_recipe_path, :method=>:get%>

<%= form_tag recipes_path, :method => 'get' do %>
  <%= text_field_tag :search, params[:search], :id => 'search_field' %>
  <%= submit_tag "Search Recipe Titles", :name => nil %>
  <%= link_to_function "Clear", "$('search_field').clear()" %>
<% end %>

<%= form_tag ingredients_path, :method => 'get' do %>
  <%= text_field_tag :search, params[:search], :id => 'search_field' %>
  <%= submit_tag "Search By Ingredients", :name => nil %>
  <%= link_to_function "Clear", "$('search_field').clear()" %>
<% end %>




<% @profile.user.recipes.each do |x|%>
  <p><%= link_to x.title, recipe_path(x.id) %></p>
  <p><%= link_to "Edit", edit_recipe_path(x.id) %></p>
  <p><%= link_to "Delete", recipe_path(x.id), method: :delete, data: {id: x.id } %></p>
<%end%>

