.row
  .small-1.columns
    =image_tag "steak.png", id: 'steak'
.row
  .small-12.columns
    %h1= @profile.user.username
.row
  .small-6.columns
    .panel
      %ul
        %li
          .subheader
            Bio:
          %span= @profile.bio
        %li
          .subheader
            Hometown:
          %span= @profile.hometown
        %li
          .subheader
            Age:
          %span= @profile.age

    -if @profile == current_user.profile
      = link_to "Update Profile", edit_profile_path(@profile),  class: 'button tiny radius'
      = link_to "New Recipe", new_recipe_path, class: 'button tiny radius'

  .small-6.columns
    .panel
      = form_tag recipes_path, :method => 'get' do
        = text_field_tag :search, params[:search], :id => 'search_field'
        = submit_tag "Search By Recipe Title", :name => nil
        = link_to_function "Clear", "$('search_field').clear()"
      = form_tag ingredients_path, :method => 'get' do
        = text_field_tag :search, params[:search], :id => 'search_field'
        = submit_tag "Search By Ingredients", :name => nil
        = link_to_function "Clear", "$('search_field').clear()"
.row
  .small-6.columns
    -if @profile == current_user.profile
      .panel
        = link_to "New Recipe", new_recipe_path, :method=>:get
  .small-6.columns
    .panel
      - @profile.user.recipes.each do |x|
        .panel
          = link_to x.title, recipe_path(x.id)
        -if @profile == current_user.profile
          = button_to "Edit", edit_recipe_path(x.id), method: :get, class: 'button tiny radius'
          = button_to "Delete", recipe_path(x.id), method: :delete, data: {id: x.id }, class: 'button tiny radius'