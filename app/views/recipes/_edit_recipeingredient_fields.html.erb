<div class='ingredient-wrapper'>
  <div>
    <%= f.label :quantity %>
    <%= f.text_field :quantity, size: "10" %>
    <%= f.label :ingredient_id, "Ingredient" %>
    <%= f.collection_select :ingredient_id, Ingredient.all, :id, :name, :prompt => "Choose an ingredient" %>
    <%= link_to_remove_association("Remove field", f,{ wrapper_class: 'ingredient-wrapper' }) %>
  </div>
  <div>
    <%= link_to_add_association "Create new ingredient", f, :ingredient %>
  </div>
</div>