<h1>Create A Recipe</h1>

<%= form_for Ingredient.new do |f| %>
  <%= f.label :name %>
  <%= f.text_area(:name) %>
  <%= f.submit "Post Ingredient" %>
<% end %>

<%= form_for Recipe.new do |f| %>
  <%= f.label :title %>
  <%= f.text_area(:title) %>
  <%= f.label :prep_time %>
  <%= f.text_area(:prep_time) %>
  <%= f.label :instructions %>
  <%= f.text_area(:instructions) %>
  <%= f.submit "Post Recipe" %>
<% end %>

