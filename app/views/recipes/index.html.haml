.row
  .small-1.columns
    =image_tag "two_steaks.png", id: 'two_steaks'
.row
  .small-12.columns
    %h1 Search Results
    - if @recipes.any?
      %ul
        - @recipes.each do |recipe|
          %li= link_to recipe.title,
              :action => 'show', :id => recipe.id
    - else
      %p Search returned no results.
      = link_to 'Back', :back
